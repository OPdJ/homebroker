{% if app.session.flashBag.has('warning') %}
    <div class="alert alert-warning fade in" role="alert">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        {% for msg in app.session.flashBag.get('warning') %}
            {{ msg }}
        {% endfor %}
    </div>
{% endif %}
